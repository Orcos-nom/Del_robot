<?xml version="1.0"?>
<robot name="del" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:arg name="is_sim" default="true"/>

    <xacro:include filename="inertial_macros.xacro"/>
  
    <!-- Include gazebo_control.xacro and pass the namespace argument -->
    <xacro:include filename="ros2_control.xacro"/>
 
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>


  <!-- BASE FOOTPRINT (Virtual link for TF tree) -->
  <link name="base_footprint"/>

  <!-- MAIN BASE LINK -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>    
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <material name="orange"/>      
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
           <origin xyz="-0.2 0 0.4" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <!--  BASE FOOTPRINT JOINT -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
  </joint>

  <link name="base_link_2">
    <visual>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>    
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <material name="orange"/>      
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
           <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <joint name="base_base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_link_2"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>

  <link name="base_link_3">
    <visual>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>    
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <material name="orange"/>      
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.150" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
           <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <joint name="base_base3_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_link_3"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <!--  REAR LEFT WHEEL (Continuous joint) -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
          <cylinder radius="0.0325" length="0.02"/>      
      </geometry>
        <material name="blue"/>      
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0325" length="0.02"/>
      </geometry>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
          <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.06 0.12 0.015" rpy="1.5708 0 3.1416"/>
    <axis xyz="0 0 1"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- REAR RIGHT WHEEL (Continuous joint) -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0325" length="0.02"/>    
      </geometry>
        <material name="blue"/>      
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0325" length="0.02"/>
      </geometry>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
           <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.06 -0.12 0.02" rpy="1.5708 0 3.1416"/>
    <axis xyz="0 0 1"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

    <!-- CASTER WHEEL LINK -->
  <link name="caster_wheel">
    <visual>
        <geometry>
            <sphere radius="0.01"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.01"/>
        </geometry>
    </collision>
    <xacro:inertial_sphere mass="0.1" radius="0.01">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
  </link>


  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.17 0 -0.0055"/>
  </joint>

  <!--lidar-->
  <link name="laser_link">
    <visual>
      <geometry>
        <cylinder radius="0.033" length="0.02"/>
      </geometry>
      <material name="white"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
        <geometry>
          <cylinder radius="0.033" length="0.02"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
      <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
          <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
  </link>

  <joint name="base_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.03 0 0.08" rpy="0 0 3.1416"/>
  </joint> 

</robot>